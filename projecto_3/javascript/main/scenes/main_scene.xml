    </textures>

    <materials>
        <!-- Deve existir um ou mais blocos "material" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <material id="default" shininess = "120">            <!--branco-->
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0" g="0.2" b="0.8" a="1.0" />
        </material>
        <material id="transparent" shininess = "0">            <!--branco-->
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="0" g="0" b="0" a="0" />
            <specular r="0" g="0" b="0" a="0" />
        </material>
        <material id="lamp" shininess = "76.8">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.25" g="0.25" b="0.25" a="1.0" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1.0" />
            <specular r="0.774597" g="0.774597" b="0.774597" a="1.0" />
        </material>
        <material id="black" shininess = "32">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.01" g="0.01" b="0.01" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
        <material id="bench" shininess = "20">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0" g="0.2" b="0.8" a="1.0" />
        </material>
    </materials>

    <transformations>
        <!-- Deve existir um ou mais blocos "transformation" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <!-- Os angulos sao expressos em graus -->
        <transformation id="default">
            <!-- instrucoes a usar sem limite nem ordem -->
            <!-- deve existir pelo menos uma transformacao -->
            <scale x="2" y="2" z="2" />
        </transformation>
    </transformations>

    <animations>
        <linear id="linearAnim" span="5">
            <controlpoint xx="0" yy="0" zz="0" />
            <controlpoint xx="0" yy="0" zz="100" />
        </linear>
        <circular id="circularAnim" span="10" center="100 0 0" radius="20" startang="0" rotang="360" />
    </animations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="5" y2="5" />
        </primitive >
        <primitive id="cylinder">
            <cylinder2 base="1" top="1" height="5" slices="40" stacks="40" />
        </primitive>
        <primitive id="ball">
            <sphere radius="12" slices="40" stacks="40" />
        </primitive>
        <primitive id="torus">
            <torus inner="5" outer="9" slices="100" loops="100" />
        </primitive>

        <primitive id="plane">
            <plane npartsU="2" npartsV="2" />
        </primitive>

        <primitive id="table_top">
            <cylinder base="3" top="3" height="0.5" slices="40" stacks="40" />
        </primitive>
        <primitive id="table_side">
            <rectangle x1="0" y1="0" x2="2.5" y2="1" />
        </primitive >
        <primitive id="board">
            <rectangle x1="-0.69" y1="-0.69" x2="0.7" y2="0.71" />
        </primitive >
        <primitive id="square">
            <rectangle x1="0" y1="0" x2="0.15" y2="0.15" />
        </primitive >
         <primitive id="wall">
            <rectangle x1="0" y1="0" x2="5" y2="5" />
        </primitive >
         <primitive id="floor">
            <rectangle x1="0" y1="0" x2="5" y2="5" />
        </primitive >

    </primitives >

    <components>
        <component id="root">
            <transformation>
                <transformationref id="none"/>
            </transformation>
            <materials>
                <material id="default" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="game" />
                <componentref id="table" />
            </children>
        </component>
        

